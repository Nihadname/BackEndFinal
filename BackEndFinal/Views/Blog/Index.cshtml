<div class="blog-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title text-center">
                    <img src="~/img/icon/section.png" alt="section-title">
                    <h2>LATEST FROM BLOG</h2>
                </div>
            </div>
        </div>
        <input type="hidden" value="@ViewBag.BlogCount" id="BlogCount" />

        <div class="row" id="BlogList">
            @await Component.InvokeAsync("Blog", new { take = 3 })

        </div>
        <div class="d-flex justify-content-center">
            <button class="btn btn-primary" id="loadmore2">Load More</button>
        </div>
    </div>
</div>