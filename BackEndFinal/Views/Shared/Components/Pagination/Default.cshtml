@model BackEndFinal.ViewModels.IPaginationVM
@{
    string actionName = ViewBag.ActionName;
    int categoryId = ViewBag.CategoryId;
}

<nav>
    <ul class="pagination">
        @if (Model.HasPrev)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action(actionName, new { id = categoryId, page = Model.CurrentPage - 1 })">Previous</a>
            </li>
        }
        @for (int i = 1; i <= Model.TotalPage; i++)
        {
            <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                <a class="page-link" href="@Url.Action(actionName, new { id = categoryId, page = i })">@i</a>
            </li>
        }
        @if (Model.HasNext)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action(actionName, new { id = categoryId, page = Model.CurrentPage + 1 })">Next</a>
            </li>
        }
    </ul>
</nav>
