@model List<Course>

<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>courses</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Course Start -->
<div class="course-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="course-title">
                    <h3>search courses</h3>
                </div>
                <div class="course-form">
                    <form id="search" method="get" asp-action="Index" asp-controller="Course">
                        <input type="search" placeholder="Search..." name="keyword" value="@ViewBag.Keyword" />
                        <button type="submit">search</button>
                    </form>
                </div>
            </div>
        </div>
        <input type="hidden" value="@ViewBag.Count" id="CourseCount" />

        <div class="row" id="CourseList">
            @await Component.InvokeAsync("Course", new { keyword = ViewBag.Keyword })

        </div>
        <div class="d-flex justify-content-center" style="display: flex; justify-content: center; margin-top:20px;">
            <button class="btn btn-primary" id="loadmore2">Load More</button>
        </div>
    </div>
</div>
<!-- Course End -->
<!-- Subscribe Start -->
@await Component.InvokeAsync("Subscriber")
