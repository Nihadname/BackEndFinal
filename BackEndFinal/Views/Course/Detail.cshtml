@model CourseDetailVM
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>Course Details</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Blog Start -->
<div class="courses-details-area blog-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="courses-details">
                    <div class="courses-details-img">
                        <img src="~/img/course/@Model.course.courseImages.FirstOrDefault().Name" width="100%" alt="courses-details">
                    </div>
                    <div class="course-details-content">
                        <h2>@Model.course.Title</h2>
                        <p>@Model.course.Description</p>
                        <div class="course-details-left">
                            <div class="single-course-left">
                                <h3>About Course</h3>
                                <p>@Model.course.AboutCourse</p>
                            </div>
                            <div class="single-course-left">
                                <h3>How to Apply</h3>
                                <p>@Model.course.HowToApply</p>
                            </div>
                            <div class="single-course-left">
                                <h3>Certification</h3>
                                <p>@Model.course.CERTIFICATION</p>
                            </div>
                        </div>
                        <div class="course-details-right">
                            <h3>Course Features</h3>
                            <ul>
                                <li>Starts: <span>@Model.course.Starts.ToString("d, MMMM yyyy")</span></li>
                                <li>Duration: <span>@Model.course.Duration</span></li>
                                <li>Class Duration: <span>@Model.course.ClassDuration</span></li>
                                <li>Skill Level: <span>@Model.course.SkillLevel</span></li>
                                <li>Language: <span>@Model.course.Language</span></li>
                                <li>Students: <span>@Model.course.Students</span></li>
                                <li>Assessments: <span>@Model.course.Assessments</span></li>
                            </ul>
                            <h3 class="red">Course Fee: $@Model.course.Price</h3>
                        </div>
                        <div class="reply-area">
                            <h3>Leave a Reply</h3>
                            <p>I must explain to you how all this mistaken idea of ncing great explorer of the rut<br> the is lder of human happiness...</p>
                            <form id="contact-form" action="http://demo.devitems.com/eduhome/mail.php" method="post">
                                <div class="row">
                                    <div class="col-md-12">
                                        <p>Name</p>
                                        <input type="text" name="name" id="name">
                                    </div>
                                    <div class="col-md-12">
                                        <p>Email</p>
                                        <input type="text" name="email" id="email">
                                    </div>
                                    <div class="col-md-12">
                                        <p>Subject</p>
                                        <input type="text" name="subject" id="subject">
                                        <p>Message</p>
                                        <textarea name="message" id="message" cols="15" rows="10"></textarea>
                                    </div>
                                </div>
                                <button type="submit" class="reply-btn"><span>Send Message</span></button>
                                <p class="form-message"></p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="blog-sidebar right">
                    <div class="single-blog-widget mb-50">
                        <h3>Search</h3>
                        <div class="blog-search">
                            <form id="search" action="#">
                                <input type="search" placeholder="Search..." name="search" />
                                <button type="submit">
                                    <span><i class="fa fa-search"></i></span>
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="single-blog-widget mb-50">
                        <h3>Categories</h3>
                        <ul>
                            @await Component.InvokeAsync("Category", new { itemType = "courses", actionType = "CoursesInCategory", controllerType = "course" })

                         
                        </ul>
                    </div>
                    <div class="single-blog-widget mb-50">
                        <div class="single-blog-banner">
                            <a href="blog-details.html" id="blog"><img src="~/img/blog/blog-img.jpg" alt="blog"></a>
                            <h2>Best<br> Education<br> Theme</h2>
                        </div>
                    </div>
                    <div class="single-blog-widget mb-50">
                        <h3>Latest Post</h3>
                        @await Component.InvokeAsync("BlogDetail")

                        
                       
                    </div>
                    <div class="single-blog-widget">
                        <h3>Tags</h3>
                        <div class="single-tag">
                            <a href="blog-details.html" class="mr-10 mb-10">course</a>
                            <a href="blog-details.html" class="mr-10 mb-10">education</a>
                            <a href="blog-details.html" class="mb-10">teachers</a>
                            <a href="blog-details.html" class="mr-10">learning</a>
                            <a href="blog-details.html" class="mr-10">university</a>
                            <a href="blog-details.html">events</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Blog End -->
@await Component.InvokeAsync("Subscriber")
