@model List<AppUser>
<div class="col-lg-12 grid-margin stretch-card">
    
    <div class="card">
        <button type="button" class="btn btn-success mb-3">
            <a class="text-black text-decoration-none" asp-controller="Account" asp-action="Register"> Create</a>
        </button>
        <div class="card-body">
            <h4 class="card-title">Users Table</h4>
            <p class="card-description">
                Add class <code>.table</code>
            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>FullName</th>
                            <th>UserName</th>
                            <th>Email</th>
                            <th>settings</th>
                        </tr>
                        <form asp-action="index">
                            <input type="text" name="searchText" value="" /> 
                            <button type="submit" >search</button>
                        </form>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            <tr>
                                <td>@item.FullName</td>
                                <td>@item.UserName</td>
                                <td>@item.Email</td>
                                @if (item.IsBlocked)
                                {
                                    <td class="text-danger">Blocked</td>
                                }else{
                                    <td class="text-success">Active</td>

                                }

                                <td>
                                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-info" style="    padding: 10px;">Details</a>
                                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary" style="    padding: 10px;">Update</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" style="    padding: 10px;">Delete</a>
                                </td>
                            </tr>
                            
                        }
                       
                    
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>