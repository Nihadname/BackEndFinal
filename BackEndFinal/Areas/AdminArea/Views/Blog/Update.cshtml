@model BlogUpdateVM

<div class="container">
    <div class="row">
        <div class="card">
            <div class="card-body">
                @if (Model?.blogImages != null)
                {
                    @foreach (var img in Model.blogImages)
                    {
                        if (img.IsMain == true)
                        {
                            <img src="~/img/blog/@img.imageUrl" width="300" height="150" />
                            <span>Is Main</span> <br /> <br />
                        }
                        else
                        {
                            <img src="~/img/blog/@img.imageUrl" width="200" height="100" />
                            <a class="btn btn-success" asp-action="DeleteImage" asp-route-id="@img.Id">Delete Image</a>
                            <br /> <br />
                        }
                    }
                }
                else
                {
                    <p>No images found.</p>
                }
                <h4 class="card-title">Product Create form</h4>
                <form enctype="multipart/form-data" method="post" class="forms-sample">
                    <div class="form-group">
                        <label asp-for="Title"></label>
                        <input asp-for="Title" class="form-control" placeholder="Name">
                        <span class="text-danger" asp-validation-for="Title"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Content"></label>
                        <input asp-for="Content" class="form-control" placeholder="Content">
                        <span class="text-danger" asp-validation-for="Content"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Writer"></label>
                        <input asp-for="Writer" class="form-control" placeholder="Writer">
                        <span class="text-danger" asp-validation-for="Writer"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Quote"></label>
                        <input asp-for="Quote" class="form-control" placeholder="Quote">
                        <span class="text-danger" asp-validation-for="Quote"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Photos"></label>
                        <input asp-for="Photos" class="form-control" placeholder="Count">
                        <span class="text-danger" asp-validation-for="Photos"></span>
                    </div>
                    <div class="form-group">
                        <select asp-for="CategoryId" asp-items="@ViewBag.Categories">
                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Update</button>
                    <a asp-action="index" class="btn btn-light">Go Back</a>
                </form>
            </div>
        </div>
    </div>
</div>
