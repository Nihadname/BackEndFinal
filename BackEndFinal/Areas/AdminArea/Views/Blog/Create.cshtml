@model BlogCreateVM
@{
    var categories = ViewBag.Categories;
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Category</h4>
            <p class="card-description">Update category details</p>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <form method="post" class="forms-sample" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" placeholder="Name">
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Content"></label>
                    <input asp-for="Content" class="form-control" placeholder="Description">
                    <span class="text-danger" asp-validation-for="Content"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Writer"></label>
                    <input asp-for="Writer" class="form-control" placeholder="Writer">
                    <span class="text-danger" asp-validation-for="Writer"></span>
                </div>
                <div class="form-group">
                    <label asp-for="quote"></label>
                    <input asp-for="quote" class="form-control" placeholder="quote">
                    <span class="text-danger" asp-validation-for="quote"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Photos"></label>
                    <input asp-for="Photos" class="form-control" placeholder="Photos">
                    <span class="text-danger" asp-validation-for="Photos"></span>
                </div>
                <div class="form-group">

                    <select asp-for="CategoryId"asp-items="categories">
                       
                      
                    </select>
                </div>
              
                <button type="submit" class="btn btn-primary me-2">Submit</button>
            </form>
        </div>
    </div>
</div>
