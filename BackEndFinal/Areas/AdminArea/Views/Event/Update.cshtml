@model EventUpdateVM
@{
    var categories = ViewBag.Categories;
}

<div class="container">
    <div class="row">
        <div class="card">
            <div class="card-body">
                @if (Model?.Images != null)
                {
                    @foreach (var img in Model.Images)
                    {
                        if (img.IsMain == true)
                        {
                            <img src="~/img/event/@img.Name" width="300" height="150" />
                            <span>Is Main</span> <br /> <br />
                        }
                        else
                        {
                            <img src="~/img/event/@img.Name" width="200" height="100" />
                            <a class="btn btn-success" asp-action="DeleteImage" asp-route-id="@img.Id">Delete Image</a>
                            <br /> <br />
                        }
                    }
                }
                else
                {
                    <p>No images found.</p>
                }
                <h4 class="card-title">Product Create form</h4>
                <form method="post" class="forms-sample" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Title"></label>
                        <input asp-for="Title" class="form-control" placeholder="Name">
                        <span class="text-danger" asp-validation-for="Title"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" class="form-control" placeholder="Description">
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StartTime"></label>
                        <input asp-for="StartTime" class="form-control" placeholder="StartTime">
                        <span class="text-danger" asp-validation-for="StartTime"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EndTime"></label>
                        <input asp-for="EndTime" class="form-control" placeholder="EndTime">
                        <span class="text-danger" asp-validation-for="EndTime"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Location"></label>
                        <input asp-for="Location" class="form-control" placeholder="Location">
                        <span class="text-danger" asp-validation-for="Location"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="HeldTime"></label>
                        <input asp-for="HeldTime" class="form-control" placeholder="HeldTime">
                        <span class="text-danger" asp-validation-for="HeldTime"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Photos"></label>
                        <input asp-for="Photos" class="form-control" placeholder="Photos">
                        <span class="text-danger" asp-validation-for="Photos"></span>
                    </div>
                    <div class="form-group">

                        <select asp-for="CategoryId" asp-items="categories">
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="SelectedSpeakerIds"></label>
                        <select asp-for="SelectedSpeakerIds" class="form-control" asp-items="ViewBag.Speakers" multiple></select>
                        <span asp-validation-for="SelectedSpeakerIds" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>
